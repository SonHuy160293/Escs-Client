<!-- Header -->
<header class="header d-flex justify-content-between align-items-center p-3 bg-dark text-white">
    <div class="d-flex align-items-center">
        <img src="~/images/logo.png" alt="Logo" height="40px" width="120px" />
      
    </div>
    <div>
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {

            <form method="post" asp-action="Logout" asp-controller="Authentication">
                <!-- Display username and logout link -->
                <span class="me-3">Hello, @User.Identity.Name</span>
                <button class="btn btn-outline-light btn-sm">
                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                </button>
            </form>
            
        }
        else
        {
            <!-- Display login link -->
            <a href="@Url.Action("Login", "Authentication")" class="btn btn-outline-light btn-sm">
                <i class="fa-solid fa-right-to-bracket"></i> Login
            </a>
        }
    </div>
</header>
<!-- Header Below -->
<header class="header-below">
    <span class="toggle-btn mt-2" onclick="toggleSidebar()">☰</span>
</header>
